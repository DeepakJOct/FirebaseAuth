<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alpha="0.8"
        android:src="@drawable/cia_logo"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_phone_pe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:text="Phone Pe SDK"
        android:textAllCaps="true"
        android:textColor="#4152bf"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_agent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_phone_pe"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:text="Agent Profile on CIA"
        android:textAllCaps="true"
        android:textColor="#4152bf"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_agent"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:text="Upload Evidence - Pre Investigation"
        android:textAllCaps="true"
        android:visibility="gone"
        android:textColor="#4152bf"
        android:textSize="14sp" />


    <ScrollView
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_head"
        android:visibility="visible">

        <include layout="@layout/include_evidence_form"/>

    </ScrollView>


</RelativeLayout>